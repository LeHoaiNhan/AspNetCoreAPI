  


<div id="menu">
    <div class="container">
        <div style="height: 70px;border-bottom:0.5px solid rgba(128, 128, 128, 0.26) ;">
            <div style="display: flex;padding: 10px;" onclick="user_click()">
                <div style="width: 50px;height: 50px;background-color: antiquewhite;border-radius: 2em;"></div>
                <div style="width: 100%;height: 40px;margin-top: auto;margin-bottom: 0px;" class="container">
                    @if (Context.User.Identity.IsAuthenticated)
                    {
                        <div style="width: 100%;height: 50%;"><h1>@User.Identity.Name</h1></div>
                    }                  
                    else
                    {
                        <div style="width: 100%;height: 50%;"><h1>Đăng nhập</h1></div>
                    }
