                    <i class="fa-solid fa-book"></i>
                    <h2>Điều khoản & chính sách</h2>
                </div>
            </div>
            @if (Context.User.Identity.IsAuthenticated)
            {
            <div style="padding: 10px;border: 0.5px solid rgba(128, 128, 128, 0.329);border-radius: 8px;margin: 5px 0px;">
                <div style="display: flex;border-radius: 5px;">
                    <i class="fa-solid fa-book"></i>
                        <h2>
                            <a asp-controller="Home" asp-action="Logout">Đăng xuất</a>
                        </h2>
                </div>
            </div>                                                                       
            }
        </div>
    </div>
</div>

<script>
    function user_click(){
        if ("@Context.User.Identity.IsAuthenticated" == "True") {
            window.location = "/nguoi-dung";
        } else {
            window.location = "/dang-nhap";
        }
    }
</script>